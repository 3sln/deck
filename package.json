{
  "name": "@3sln/reel",
  "version": "0.0.3",
  "description": "A Vite plugin for building scalable, zero-config, Markdown-based component playgrounds and documentation sites.",
  "type": "module",
  "author": "Ray Stubbs",
  "repository": {
    "type": "git",
    "url": "https://github.com/3sln/reel.git"
  },
  "scripts": {
    "format": "prettier -w \"**/*.js\""
  },
  "license": "MIT",
  "keywords": [
    "vite",
    "plugin",
    "documentation",
    "markdown",
    "component",
    "playground"
  ],
  "exports": {
    ".": "./src/main.js",
    "./vite-plugin": "./vite-plugin.js"
  },
  "bin": {
    "reel-build": "./bin/build.js"
  },
  "files": [
    "bin/",
    "src/",
    "vite-plugin.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@3sln/bones": "^0.0.2",
    "@3sln/dodo": "^0.0.3",
    "@3sln/ngin": "^0.0.1",
    "fs-extra": "^11.3.2",
    "glob": "^10.3.10",
    "highlight.js": "^11.9.0",
    "marked": "^16.3.0",
    "vite": "^5.1.0"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  }
}
